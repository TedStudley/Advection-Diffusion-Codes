{
  VectorXd u (N);
  VectorXd utemp (N);

  double h       = 1.0 / (N + 1);
  double delta_t = mu * h / kappa;

  init_timestep (delta_t, T);

  sineWave (u, k);

  t = 0;

  for (int i = 0; t < T; ++i) {
    forwardEuler (u, delta_t, h, kappa);
    t += delta_t;
  }

  sineWave (utemp, delta_t, k, kappa, t);

  VectorXd error = u - utemp;

  cerr << N << " " << maxNorm (error)
            << " " << twoNorm (error) << endl;
}
